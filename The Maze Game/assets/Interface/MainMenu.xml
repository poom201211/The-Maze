<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="StartScreen" controller="mygame.gui.MainMenuController">
        <layer id="GLayer0" childLayout="absolute" backgroundImage="Textures/background/main-background.png">
            <control name="label" id="title" width="10%" x="45%" y="5%" text="The Maze" font="aurulent-sans-16.fnt" height="5%"/>
            <image filename="Textures/background/start.png" childLayout="center" width="16%" x="42%" y="50%" height="8%">
                <interact onClick="startGame()" />
            </image>
            <image filename="Textures/background/option.png" childLayout="center" width="16%" x="42%" y="60%" height="8%">
                <interact onClick="option()" />
            </image>
            <image filename="Textures/background/exit.png" childLayout="center" width="16%" x="42%" y="70%" height="8%">
                <interact onClick="quitGame()" />
            </image>
        </layer>
    </screen>
</nifty>
